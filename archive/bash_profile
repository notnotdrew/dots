      function update_vim_bundles() {
        STARTING_LOCATION=$(pwd)

        cd ~/.vim/bundle

        for i in `\ls -p -d */`; do
          cd "$i"
          echo "Updating $i..."
          git pull --recurse-submodules | grep -v 'Already up-to-date' | sed 's/^/  /'
          [ -f .git/.gitmodules ] && git submodule update | sed 's/^/  /'
          cd ..
        done

        cd "$STARTING_LOCATION"
      }

