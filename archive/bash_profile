      function neat() {
        yes | ruby -ne h,w=$LINES,$COLUMNS'/2
                        cy=rand h
                        cx=rand w
                        (h+w).times{|r|
                         print"\e[4#{rand 8}m"
                         0.step(6.28, 0.001)
                          .map{|Ã¸|[cy+r*Math.sin(Ã¸),cx+r*Math.cos(Ã¸)]}
