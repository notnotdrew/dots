      function colorprint() {
        for c; do
          printf '\e[48;5;%dm%03d' $c $c
        done
        printf '\e[0m \n'
      }

      function colors() {
        colorprint {0..15}
        for ((i=0;i<6;i++)); do
          colorprint $(seq $((i*36+16)) $((i*36+51)))
        done
        colorprint {232..255}
      }

      export black=$(tput setaf 0)
      export red=$(tput setaf 1)
